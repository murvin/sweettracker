                 classpathref="classrefcpy" />

        <builder basename="GlobalResources"
                 source="/Users/mbhantooa/Desktop/SweetTracker/src/com/sweettracker/utils/"
                 descriptor="/Users/mbhantooa/Desktop/SweetTracker/resources/resources.xml"
                 destination="/Users/mbhantooa/Desktop/SweetTracker/res/"
                 path="/Users/mbhantooa/Desktop/SweetTracker/resources/" 
                  >
                   
